<% content_for(:sidebar) do %>
  <div class="sidebar">
    <ul>
      <%= link_to @category.name, category_parameters_path(@category) %>
      <% @child_categories.each do |category| %>
        <li><%= link_to category.name, category_parameters_path(@category) %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="content">
  <%= link_to "Up", category_parameter_hash_attribute_path(@category, @parameter, @hash_attribute.id) %>
  <button>
    <%= link_to "New", new_category_parameter_hash_attribute_hash_element_path(@category, @parameter, @hash_attribute.id) %>
  </button>
  <% @hash_elements.each do |hash_element| %>
    <%= hash_element.value %>
  <% end %>
</div>
