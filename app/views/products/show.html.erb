<% content_for(:sidebar) do %>
  <div class="sidebar">
    <ul>
      <%= link_to @category.name, category_products_path(@category) %>
      <% @child_categories.each do |category| %>
        <li><%= link_to category.name, category_products_path(@category) %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="content">
  <%= link_to "Up", category_products_path(@category) %>
  <button>
    <%= link_to "Attributes", category_product_show_params_path(@category, @product) %>
  </button>
  <%= @product.name %>
  <%= @product.price %>
  <br />
  <% @attributes.each do |attribute| %>
    <%= attribute[0] %> | <%= attribute[1] %> <br />
  <% end %>
</div>
