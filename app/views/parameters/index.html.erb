<% content_for(:sidebar) do %>
  <div class="sidebar">
    <ul>
      <%= link_to @category.name, category_parameters_path(@category_back) %>
      <% @child_categories.each do |category| %>
        <li><%= link_to category.name, category_parameters_path(category) %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="content">
  <%= link_to "Up", category_products_path(@category) %>

  <button>
    <%= link_to "New", new_category_parameter_path %>
  </button>

  <table>
    <% @parameters.each do |parameter| %>
      <tr>
        <td><%= link_to parameter.name, category_parameter_path(@category, parameter)  %></td>
        <td><%= link_to "Edit", edit_category_parameter_path(@category, parameter) %></td>
        <td><%= link_to "Delete", category_parameter_path(@category, parameter), method: :delete %></td>
      </tr>
    <% end %>
  </table>
</div>
